@model HotelProject.WebUI.Models.Testimonial.AddTestimonialViewModel

@{
    ViewData["Title"] = "Add Testimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Staff Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Staff Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Image</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />
    <button class="btn btn-primary">Add Testimonial</button>
</form>